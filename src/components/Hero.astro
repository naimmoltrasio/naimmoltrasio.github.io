---
title: "Porfolio de Naim Moltrasio";
description: "";
const personalImageAlt = "Naim Moltrasio";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
---

<style>
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animated-gradient-text {
    background: linear-gradient(270deg, #ff8a00, #e52e71, #9b59b6, #5b86e5);
    background-size: 600% 600%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient 8s ease infinite;
  }
</style>

<div
  class="flex flex-col md:flex-row items-center md:items-start max-w-xl md:max-w-3xl mx-auto"
>
  <div class="md:flex-1">
    <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-4xl dark:text-white"
    >
      ¡Hola Mundo! Soy
    </h1>
    <h1
      class="text-4xl font-bold tracking-tight text-gray-800 sm:text-7xl dark:text-white"
    >
      <span class="animated-gradient-text">Naim Moltrasio</span>
    </h1>
    <p
      class="mt-6 text-xl text-grey-800 dark:[&>strong]:text-white-200 [&>strong]:text-white-500 [&>strong]:font-semibold dark:text-white-300"
    >
      <strong>Estudiante de Ingeniería Informática</strong>
      en Barcelona, España.
    </p>
    <nav class="flex flex-wrap gap-4 mt-8">
      <SocialPill href="mailto:naim.moltrasio@gmail.com">
        <MailIcon class="size-4" />
        Contáctame
      </SocialPill>
      <SocialPill href="https://linkedin.com/in/naimmoltrasio">
        <LinkedInIcon class="size-4" />
        LinkedIn
      </SocialPill>
    </nav>
  </div>
  <div class="mt-8 md:mt-0 md:ml-8">
    <img
      src="/naim.webp"
      alt={personalImageAlt}
      class="w-60 h-60 object-cover rounded-full"
    />
  </div>
</div>
